# ===== DATABASE =====
# Choose ONE database configuration below:

# SQLite (Local Development - Recommended for testing)
DATABASE_URL="file:./packages/database/prisma/dev.db"

# PostgreSQL (Production - Recommended)
# DATABASE_URL="postgresql://username:password@host:5432/database_name?schema=public"

# Examples:
# Render: postgresql://user:pass@dpg-xxx.singapore-postgres.render.com/dbname?sslmode=require
# Railway: postgresql://postgres:pass@containers-xxx.railway.app:5432/railway
# Neon: postgresql://user:pass@ep-xxx.us-east-2.aws.neon.tech/neondb?sslmode=require
# Supabase: postgresql://postgres:pass@db.xxx.supabase.co:5432/postgres

# ===== SECURITY =====
# CRITICAL: Generate new secrets for production!
# Run: openssl rand -base64 32

NEXTAUTH_SECRET="change-me-in-production-use-openssl-rand"
NEXTAUTH_URL="http://localhost:3001"

# JWT Authentication
JWT_SECRET="change-me-in-production-use-openssl-rand-64-bytes"
JWT_ACCESS_EXPIRES_IN="15m"
JWT_REFRESH_EXPIRES_IN="7d"

# AES-256 Encryption Key (32 bytes for 2FA secrets)
ENCRYPTION_KEY="change-me-32-byte-encryption-key"

# ===== APPLICATION =====
NODE_ENV="development"  # development | production | test
PORT="3001"
APP_NAME="Ashley AI Manufacturing ERP"
APP_URL="http://localhost:3001"  # Change to your production domain

# ===== LOGGING =====
LOG_LEVEL="INFO"  # DEBUG | INFO | WARN | ERROR | SILENT

# ===== MULTI-TENANCY & WORKSPACE =====
DEFAULT_WORKSPACE_ID="demo-workspace-1"
DEMO_MODE="true"  # IMPORTANT: Set to "false" in production!

# ===== FEATURES =====
ENABLE_2FA="false"
ENABLE_EMAIL_NOTIFICATIONS="false"
ENABLE_SMS_NOTIFICATIONS="false"

# ===== SENTRY ERROR TRACKING =====
# Sign up: https://sentry.io/signup/
SENTRY_DSN=""
NEXT_PUBLIC_SENTRY_DSN=""
SENTRY_ORG=""
SENTRY_PROJECT=""
SENTRY_AUTH_TOKEN=""
APP_VERSION="1.0.0"

# ===== REDIS CACHING =====
# Local Redis (Development)
REDIS_URL="redis://localhost:6379"

# Production Options:
# Upstash: rediss://default:pass@xxx.upstash.io:6379
# Redis Cloud: redis://user:pass@redis-xxx.cloud.redislabs.com:12345
# Railway: redis://default:pass@containers-xxx.railway.app:6379

# ===== AUTOMATED BACKUPS =====
