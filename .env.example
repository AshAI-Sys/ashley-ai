# Ashley AI - Environment Variables Template
# Copy this file to .env and fill in your actual values
# IMPORTANT: Never commit .env files to git!

# ===== DATABASE =====
# SQLite for development (easy setup)
DATABASE_URL="file:./packages/database/dev.db"

# PostgreSQL for production (recommended)
# DATABASE_URL="postgresql://user:password@localhost:5432/ashley_ai"

# ===== AUTHENTICATION & SECURITY =====
JWT_SECRET="CHANGE-THIS-TO-A-SECURE-RANDOM-STRING-MIN-32-CHARS"
JWT_EXPIRES_IN="7d"
SESSION_SECRET="CHANGE-THIS-TO-A-SECURE-RANDOM-STRING-MIN-32-CHARS"

# ===== REDIS (REQUIRED FOR PRODUCTION) =====
REDIS_URL="redis://localhost:6379"
# For production use Upstash, AWS ElastiCache, etc.
# REDIS_URL="rediss://default:password@host:port"

# API Keys
ASH_OPENAI_API_KEY=sk-your-openai-api-key

# Payment Gateways
# Stripe (International payments)
STRIPE_SECRET_KEY=sk_test_your_stripe_secret_key
STRIPE_PUBLISHABLE_KEY=pk_test_your_stripe_publishable_key
STRIPE_WEBHOOK_SECRET=whsec_your_webhook_secret
NEXT_PUBLIC_STRIPE_PUBLISHABLE_KEY=pk_test_your_stripe_publishable_key

# GCash (Philippines mobile wallet)
GCASH_MERCHANT_ID=your-gcash-merchant-id
GCASH_API_KEY=your-gcash-api-key
GCASH_API_URL=https://api.gcash.com/v1

# Email - Resend (recommended) or SMTP
RESEND_API_KEY=re_your_resend_api_key_here
EMAIL_FROM=Ashley AI <noreply@yourdomain.com>

# Alternative: SMTP (if not using Resend)
ASH_SMTP_HOST=smtp.gmail.com
ASH_SMTP_PORT=587
ASH_SMTP_USER=your-email@gmail.com
ASH_SMTP_PASS=your-app-password

# SMS Notifications
# Twilio (International SMS)
TWILIO_ACCOUNT_SID=your_twilio_account_sid
TWILIO_AUTH_TOKEN=your_twilio_auth_token
TWILIO_PHONE_NUMBER=+15551234567

# Semaphore (Philippines SMS - Recommended for PH)
SEMAPHORE_API_KEY=your_semaphore_api_key
SEMAPHORE_SENDER_NAME=ASHLEYAI

# Portal URL (for SMS links)
PORTAL_URL=https://portal.ashleyai.com

# File Storage
ASH_STORAGE_PROVIDER=local # local | aws | cloudflare
UPLOAD_DIR=./uploads

# AWS S3 Configuration
ASH_AWS_REGION=ap-southeast-1
ASH_AWS_BUCKET=ash-ai-files
ASH_AWS_ACCESS_KEY_ID=your-aws-access-key
ASH_AWS_SECRET_ACCESS_KEY=your-aws-secret-key

# Cloudflare R2 Configuration (alternative to AWS S3)
CLOUDFLARE_ACCOUNT_ID=your-cloudflare-account-id
CLOUDFLARE_R2_ENDPOINT=https://your-account-id.r2.cloudflarestorage.com
# Use same AWS credentials format for R2
# ASH_AWS_ACCESS_KEY_ID=your-r2-access-key
# ASH_AWS_SECRET_ACCESS_KEY=your-r2-secret-key

# Services
ASH_API_PORT=3000
ASH_ADMIN_PORT=3001
ASH_STAFF_PORT=3002
ASH_PORTAL_PORT=3003

# Environment
NODE_ENV=development
ASH_LOG_LEVEL=debug

# Philippine Tax Settings
ASH_BIR_TIN=your-bir-tin-number
ASH_WITHHOLDING_TAX_RATE=0.02