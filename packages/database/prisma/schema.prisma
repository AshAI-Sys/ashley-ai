  updates         CAPAUpdate[]  @relation("CAPATaskUpdates")

  @@unique([workspace_id, capa_number])
  // Performance indexes
  @@index([workspace_id])
  @@index([workspace_id, status])
  @@index([workspace_id, priority])
  @@index([workspace_id, type])
  @@index([order_id])
  @@index([assigned_to])
  @@index([created_by])
  @@index([verified_by])
  @@index([status])
