# Production Environment Variables for Ashley AI
# Copy this file to .env.production and fill in your actual values

# Database (Neon PostgreSQL)
DATABASE_URL="postgresql://username:password@ep-xxx.neon.tech/ashleyai?sslmode=require"

# JWT Secrets (Generate with: openssl rand -base64 32)
JWT_SECRET="your-super-secret-jwt-key-change-this-in-production"
JWT_REFRESH_SECRET="your-super-secret-refresh-key-change-this-in-production"

# Email Service (Resend)
RESEND_API_KEY="re_xxxxxxxxxxxxxxxxxxxxxxxxxx"
RESEND_FROM_EMAIL="Ashley AI <noreply@yourdomain.com>"

# Application URL
NEXT_PUBLIC_APP_URL="https://ashleyai.vercel.app"

# Node Environment
NODE_ENV="production"

# Optional: Redis (for caching and sessions)
REDIS_URL="redis://default:password@redis-host:6379"

# Optional: File Storage (for uploads)
# AWS S3 or Cloudinary
AWS_S3_BUCKET="ashley-ai-uploads"
AWS_ACCESS_KEY_ID="your-aws-access-key"
AWS_SECRET_ACCESS_KEY="your-aws-secret-key"
AWS_REGION="ap-southeast-1"
