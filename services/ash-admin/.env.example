# ===== DATABASE =====
# SQLite (Local Development)
# DATABASE_URL="file:../../packages/database/prisma/dev.db"

# PostgreSQL (Production)
DATABASE_URL="postgresql://user:password@host:port/database"

# ===== SECURITY =====
NEXTAUTH_SECRET="your-nextauth-secret-here-change-this"
NEXTAUTH_URL="http://localhost:3001"
JWT_SECRET="your-jwt-secret-here-change-this"
# 32-byte encryption key for 2FA secrets and sensitive data (AES-256)
ENCRYPTION_KEY="your-32-byte-encryption-key-here-change-this"

# ===== APPLICATION =====
NODE_ENV="development"
PORT="3001"
APP_NAME="Ashley AI Manufacturing ERP"

# CRITICAL FOR EMAIL VERIFICATION LINKS
# Development: http://localhost:3001
# Production (Vercel): https://your-app.vercel.app or https://yourdomain.com
# Production (Railway): https://your-app.up.railway.app or https://yourdomain.com
NEXT_PUBLIC_APP_URL="http://localhost:3001"

# Deprecated (use NEXT_PUBLIC_APP_URL instead)
APP_URL="http://localhost:3001"

# ===== FEATURES =====
ENABLE_2FA="false"
ENABLE_EMAIL_NOTIFICATIONS="false"
ENABLE_SMS_NOTIFICATIONS="false"

# ===== SENTRY ERROR TRACKING =====
# Get your DSN from https://sentry.io/settings/projects/
SENTRY_DSN=""
NEXT_PUBLIC_SENTRY_DSN=""
SENTRY_ORG="ashley-ai"
SENTRY_PROJECT="ashley-ai-admin"
SENTRY_AUTH_TOKEN=""
APP_VERSION="1.0.0"

# ===== REDIS CACHING =====
# Local Redis (Development)
REDIS_URL="redis://localhost:6379"
# Upstash Redis (Production - Serverless)
# REDIS_URL="rediss://default:xxx@xxx.upstash.io:6379"

# ===== AUTOMATED BACKUPS =====
BACKUP_ENABLED="false"
BACKUP_SCHEDULE="daily"
BACKUP_DIR="./backups"
BACKUP_MAX_BACKUPS="30"

# ===== AI CHAT ASSISTANT =====
# Get your API keys from:
# - OpenAI: https://platform.openai.com/api-keys
# - Anthropic: https://console.anthropic.com/settings/keys
ASH_OPENAI_API_KEY="sk-..."
ASH_ANTHROPIC_API_KEY="sk-ant-..."

# ===== FILE STORAGE (Cloudinary) =====
CLOUDINARY_CLOUD_NAME="your-cloud-name"
CLOUDINARY_API_KEY="your-api-key"
CLOUDINARY_API_SECRET="your-api-secret"

# ===== 3PL DELIVERY PROVIDERS =====
# Lalamove
LALAMOVE_API_KEY=""
LALAMOVE_API_SECRET=""
# J&T Express
JNT_API_KEY=""
JNT_API_SECRET=""
JNT_CUSTOMER_CODE=""

# ===== EMAIL NOTIFICATIONS (REQUIRED FOR EMAIL VERIFICATION) =====
# Resend API - https://resend.com
# CRITICAL: Email verification won't work without this
# 1. Sign up at https://resend.com
# 2. Create API key (Dashboard → API Keys)
# 3. Verify your domain (Dashboard → Domains → Add Domain → Follow DNS instructions)
# 4. Set EMAIL_FROM to match your verified domain
RESEND_API_KEY="re_..."

# Email sender address (MUST match verified domain in Resend)
# Development: Can use any email, emails will log to console
# Production: MUST be from verified domain (e.g., noreply@yourdomain.com)
EMAIL_FROM="Ashley AI <noreply@ashleyai.com>"

# ===== SMS NOTIFICATIONS =====
# Twilio (Global SMS) - https://www.twilio.com/console
TWILIO_ACCOUNT_SID=""
TWILIO_AUTH_TOKEN=""
TWILIO_PHONE_NUMBER=""
# Semaphore (Philippine SMS) - https://semaphore.co
SEMAPHORE_API_KEY=""
SEMAPHORE_SENDER_NAME="ASHLEY AI"

# ===== WHATSAPP NOTIFICATIONS =====
# Twilio WhatsApp - https://www.twilio.com/whatsapp
TWILIO_WHATSAPP_NUMBER=""  # Format: +14155238886
# Meta WhatsApp Business API - https://business.facebook.com/wa/manage
META_WHATSAPP_TOKEN=""
META_WHATSAPP_PHONE_ID=""
