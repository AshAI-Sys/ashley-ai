# ===== DATABASE =====
# SQLite (Local Development)
# DATABASE_URL="file:../../packages/database/prisma/dev.db"

# PostgreSQL (Production)
DATABASE_URL="postgresql://user:password@host:port/database"

# ===== SECURITY =====
NEXTAUTH_SECRET="your-nextauth-secret-here-change-this"
NEXTAUTH_URL="http://localhost:3001"
JWT_SECRET="your-jwt-secret-here-change-this"
# 32-byte encryption key for 2FA secrets and sensitive data (AES-256)
ENCRYPTION_KEY="your-32-byte-encryption-key-here-change-this"

# ===== APPLICATION =====
NODE_ENV="development"
PORT="3001"
APP_NAME="Ashley AI Manufacturing ERP"
APP_URL="http://localhost:3001"

# ===== FEATURES =====
ENABLE_2FA="false"
ENABLE_EMAIL_NOTIFICATIONS="false"
ENABLE_SMS_NOTIFICATIONS="false"

# ===== SENTRY ERROR TRACKING =====
# Get your DSN from https://sentry.io/settings/projects/
SENTRY_DSN=""
NEXT_PUBLIC_SENTRY_DSN=""
SENTRY_ORG="ashley-ai"
SENTRY_PROJECT="ashley-ai-admin"
SENTRY_AUTH_TOKEN=""
APP_VERSION="1.0.0"

# ===== REDIS CACHING =====
# Local Redis (Development)
REDIS_URL="redis://localhost:6379"
# Upstash Redis (Production - Serverless)
# REDIS_URL="rediss://default:xxx@xxx.upstash.io:6379"

# ===== AUTOMATED BACKUPS =====
BACKUP_ENABLED="false"
BACKUP_SCHEDULE="daily"
BACKUP_DIR="./backups"
BACKUP_MAX_BACKUPS="30"

# ===== AI CHAT ASSISTANT =====
# Get your API keys from:
# - OpenAI: https://platform.openai.com/api-keys
# - Anthropic: https://console.anthropic.com/settings/keys
ASH_OPENAI_API_KEY="sk-..."
ASH_ANTHROPIC_API_KEY="sk-ant-..."

# ===== FILE STORAGE (Cloudinary) =====
CLOUDINARY_CLOUD_NAME="your-cloud-name"
CLOUDINARY_API_KEY="your-api-key"
CLOUDINARY_API_SECRET="your-api-secret"

# ===== 3PL DELIVERY PROVIDERS =====
# Lalamove
LALAMOVE_API_KEY=""
LALAMOVE_API_SECRET=""
# J&T Express
JNT_API_KEY=""
JNT_API_SECRET=""
JNT_CUSTOMER_CODE=""

# ===== EMAIL NOTIFICATIONS =====
# Resend (https://resend.com)
RESEND_API_KEY="re_..."
EMAIL_FROM="Ashley AI <noreply@ashleyai.com>"

# ===== SMS NOTIFICATIONS =====
# Twilio (Global SMS)
TWILIO_ACCOUNT_SID=""
TWILIO_AUTH_TOKEN=""
TWILIO_PHONE_NUMBER=""
# Semaphore (Philippine SMS)
SEMAPHORE_API_KEY=""
SEMAPHORE_SENDER_NAME="ASHLEY AI"
