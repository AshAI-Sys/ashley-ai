# Ashley AI - Production Environment Configuration
# Copy this file to .env.production and update with your actual values

# ===== DATABASE =====
DATABASE_URL="postgresql://username:password@localhost:5432/ashley_ai_prod"

# ===== AUTHENTICATION =====
JWT_SECRET="your-super-secure-jwt-secret-key-here-use-256-bit-key"
NEXTAUTH_SECRET="your-nextauth-secret-key-here"
NEXTAUTH_URL="https://your-domain.com"

# ===== SECURITY =====
ENCRYPTION_KEY="your-32-character-encryption-key-here"
SESSION_SECRET="your-session-secret-key-here"

# ===== EMAIL & NOTIFICATIONS =====
SMTP_HOST="smtp.gmail.com"
SMTP_PORT="587"
SMTP_USER="your-email@gmail.com"
SMTP_PASSWORD="your-app-password"
FROM_EMAIL="noreply@ashleyai.com"

# ===== CLOUD STORAGE =====
AWS_ACCESS_KEY_ID="your-aws-access-key"
AWS_SECRET_ACCESS_KEY="your-aws-secret-key"
AWS_REGION="us-east-1"
AWS_S3_BUCKET="ashley-ai-assets"

# ===== APPLICATION =====
NODE_ENV="production"
PORT="3001"
DOMAIN="your-domain.com"

# ===== MONITORING =====
SENTRY_DSN="your-sentry-dsn-here"
LOG_LEVEL="info"

# ===== REDIS (for caching) =====
REDIS_URL="redis://localhost:6379"

# ===== RATE LIMITING =====
RATE_LIMIT_WINDOW="15"
RATE_LIMIT_MAX="100"

# ===== FILE UPLOADS =====
MAX_FILE_SIZE="10485760"  # 10MB in bytes
ALLOWED_FILE_TYPES="image/jpeg,image/png,image/gif,application/pdf"

# ===== BACKUP =====
BACKUP_SCHEDULE="0 2 * * *"  # Daily at 2 AM
BACKUP_RETENTION_DAYS="30"