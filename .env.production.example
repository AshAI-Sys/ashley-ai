# Ashley AI - Production Environment Variables
# Copy this to .env in production and fill in actual values

# ============================================
# APPLICATION
# ============================================
NODE_ENV=production
PORT=3001

# ============================================
# URLS
# ============================================
NEXT_PUBLIC_API_URL=https://your-app.railway.app
NEXT_PUBLIC_APP_URL=https://your-app.railway.app

# ============================================
# DATABASE (Railway will provide this automatically)
# ============================================
DATABASE_URL=postgresql://user:password@host:5432/database?sslmode=require

# ============================================
# SECURITY - JWT
# ============================================
# Generate with: openssl rand -base64 32
JWT_SECRET=your-super-secret-jwt-key-min-32-characters-change-this
JWT_ACCESS_EXPIRES_IN=15m
JWT_REFRESH_EXPIRES_IN=7d

# ============================================
# SECURITY - SESSIONS & CSRF
# ============================================
# Generate with: openssl rand -base64 32
SESSION_SECRET=your-session-secret-key-min-32-characters-change-this
CSRF_SECRET=your-csrf-secret-key-min-32-characters-change-this
ENCRYPTION_KEY=your-encryption-key-min-32-characters-change-this

# ============================================
# REDIS (Optional - for caching and sessions)
# ============================================
# Railway Redis addon will provide this
REDIS_URL=redis://default:password@host:6379

# ============================================
# CORS
# ============================================
ALLOWED_ORIGINS=https://your-app.railway.app,https://your-custom-domain.com

# ============================================
# EMAIL (Optional - for notifications)
# ============================================
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-password
SMTP_FROM=Ashley AI <noreply@ashleyai.com>

# ============================================
# FILE STORAGE (Optional - Cloudinary)
# ============================================
CLOUDINARY_CLOUD_NAME=your-cloud-name
CLOUDINARY_API_KEY=your-api-key
CLOUDINARY_API_SECRET=your-api-secret
CLOUDINARY_URL=cloudinary://api_key:api_secret@cloud_name

# ============================================
# MONITORING (Optional)
# ============================================
# Sentry for error tracking
SENTRY_DSN=https://your-sentry-dsn@sentry.io/project-id

# ============================================
# PAYMENT (Optional - if using payments)
# ============================================
STRIPE_SECRET_KEY=sk_live_your-stripe-secret-key
STRIPE_PUBLISHABLE_KEY=pk_live_your-stripe-publishable-key

# ============================================
# AI SERVICES (Optional)
# ============================================
ANTHROPIC_API_KEY=your-anthropic-api-key
OPENAI_API_KEY=your-openai-api-key

# ============================================
# FEATURE FLAGS
# ============================================
ENABLE_AI_CHAT=true
ENABLE_EMAIL_NOTIFICATIONS=true
ENABLE_SMS_NOTIFICATIONS=false
ENABLE_ANALYTICS=true

# ============================================
# LOGGING
# ============================================
LOG_LEVEL=info
