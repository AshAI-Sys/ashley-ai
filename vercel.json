{
  "$schema": "https://openapi.vercel.sh/vercel.json",
  "buildCommand": "npx prisma generate --schema=../../packages/database/prisma/schema.prisma && pnpm build",
  "installCommand": "pnpm install --no-frozen-lockfile",
  "outputDirectory": ".next",
  "framework": "nextjs",
  "regions": ["sin1"],
  "build": {
    "env": {
      "HUSKY": "0",
      "SKIP_ENV_VALIDATION": "1"
    }
  }
}
