# Test Environment Configuration
# Copy this to .env.test.local and customize for your local test environment

# Database
DATABASE_URL="postgresql://test_user:test_password@localhost:5433/ashley_ai_test"
TEST_DATABASE_URL="postgresql://test_user:test_password@localhost:5433/ashley_ai_test"

# Redis
REDIS_URL="redis://localhost:6380"

# JWT
JWT_SECRET="test_jwt_secret_key_for_testing_only_do_not_use_in_production"
JWT_EXPIRES_IN="24h"

# API
API_BASE_URL="http://localhost:3002"
PORT=3002

# Node Environment
NODE_ENV="test"

# Disable external services in test
DISABLE_EMAIL=true
DISABLE_SMS=true
DISABLE_WEBHOOKS=true

# Test-specific flags
IS_TEST_ENVIRONMENT=true
ENABLE_TEST_LOGGING=true
